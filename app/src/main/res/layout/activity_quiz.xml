<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context=".AllActivities.QuizActivity">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/bowlby_one_sc"
        android:paddingLeft="12dp"
        android:text="Choose Your Anime"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/narutoview"
        android:layout_width="240dp"
        android:layout_height="120dp"
        android:layout_marginTop="3dp"
        android:onClick="animeImage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        app:srcCompat="@drawable/naruto" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="20dp" />

    <ImageView
        android:id="@+id/aotview"
        android:layout_width="235dp"
        android:layout_height="176dp"
        android:layout_marginTop="3dp"
        android:onClick="animeImage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/narutoview"
        app:srcCompat="@drawable/aot" />

    <ImageView
        android:id="@+id/coteview"
        android:layout_width="177dp"
        android:layout_height="211dp"
        android:onClick="animeImage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/aotview"
        app:srcCompat="@drawable/cote" />

    <ImageView
        android:id="@+id/haikyuuview"
        android:layout_width="183dp"
        android:layout_height="164dp"
        android:layout_marginTop="12dp"
        android:onClick="animeImage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/coteview"
        app:srcCompat="@drawable/haikyuu" />
</androidx.constraintlayout.widget.ConstraintLayout>