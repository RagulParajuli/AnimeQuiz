<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/anilogo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/anilogo"
        android:supportsRtl="true"
        android:theme="@style/Theme.AnimeQuiz"
        tools:targetApi="31">
        <activity
            android:name=".AllActivities.AotActivity"
            android:exported="false" />
        <activity
            android:name=".AllActivities.NarutoActivity"
            android:exported="false" />
        <activity
            android:name=".AllActivities.HaikyuuActivity"
            android:exported="false" />
        <activity
            android:name=".AllActivities.CoteActivity"
            android:exported="false" />
        <activity
            android:name=".AllActivities.QuizActivity"
            android:exported="false" />
        <activity
            android:name=".AllActivities.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>